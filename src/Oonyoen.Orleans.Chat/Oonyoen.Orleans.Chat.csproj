<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <OutputType>Library</OutputType>
    <PackageId>Oonyoen.Orleans.Chat</PackageId>
    <Version>1.0.0</Version>
    <Authors>oonyoen</Authors>
    <Company>oonyoen-org</Company>
    <PackageDescription>Grain implementation for chat functionality.</PackageDescription>
    <RepositoryUrl>https://github.com/oonyoen-org/Oonyoen.Orleans.Chat</RepositoryUrl>
    <RestoreAdditionalProjectSources>
      https://api.nuget.org/v3/index.json;
      https://nuget.pkg.github.com/oonyoen-org/index.json;
    </RestoreAdditionalProjectSources>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authorization" Version="5.0.6" />
    <PackageReference Include="Microsoft.Orleans.CodeGenerator.MSBuild" Version="3.4.2">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Oonyoen.Orleans.Chat.Abstractions\Oonyoen.Orleans.Chat.Abstractions.csproj" />
  </ItemGroup>

</Project>
